# Copy this file to .env (DO NOT commit secrets).
# Required production environment variables for Render or other hosts
# Security: keep values secret and do not commit .env with real secrets.

# Flask/debug
FLASK_DEBUG=0

# Database (full SQLALCHEMY compatible URL). Example for Postgres:
# postgres://user:password@host:5432/dbname
DATABASE_URL=

# JWT secret for API tokens
JWT_SECRET_KEY=

# Flask session secret for server-side sessions
FLASK_APP_KEY=

# Frontend origin for CORS
FRONTEND_URL=

# Mail configuration (optional, required for email features)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=

# Optional: configure number of Gunicorn workers
GUNICORN_WORKERS=4

# Any other app-specific secrets can be defined here
# SENTRY_DSN= (optional)
